<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/t_weather_toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_top_or_bottom_margin_between"
            android:layout_marginLeft="@dimen/card_left_or_right_margin"
            android:layout_marginRight="@dimen/card_left_or_right_margin"
            android:layout_marginTop="@dimen/card_top_or_bottom_margin_best"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <include
                layout="@layout/content_detail_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_error"
            android:layout_marginBottom="@dimen/card_top_or_bottom_margin_between"
            android:layout_marginLeft="@dimen/card_left_or_right_margin"
            android:layout_marginRight="@dimen/card_left_or_right_margin"
            android:layout_marginTop="@dimen/card_top_or_bottom_margin_between"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <include
                layout="@layout/content_detail_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_now"
            android:layout_marginBottom="@dimen/card_top_or_bottom_margin_between"
            android:layout_marginLeft="@dimen/card_left_or_right_margin"
            android:layout_marginRight="@dimen/card_left_or_right_margin"
            android:layout_marginTop="@dimen/card_top_or_bottom_margin_between"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <include
                layout="@layout/content_detail_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_aqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_forecast"
            android:layout_marginBottom="@dimen/card_top_or_bottom_margin_between"
            android:layout_marginLeft="@dimen/card_left_or_right_margin"
            android:layout_marginRight="@dimen/card_left_or_right_margin"
            android:layout_marginTop="@dimen/card_top_or_bottom_margin_between"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <include
                layout="@layout/content_detail_aqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_aqi"
            android:layout_marginBottom="@dimen/card_top_or_bottom_margin_best"
            android:layout_marginLeft="@dimen/card_left_or_right_margin"
            android:layout_marginRight="@dimen/card_left_or_right_margin"
            android:layout_marginTop="@dimen/card_top_or_bottom_margin_between"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <include
                layout="@layout/content_detail_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
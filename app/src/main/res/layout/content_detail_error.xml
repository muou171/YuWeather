<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_red_light"
    android:paddingBottom="@dimen/card_default_top_or_bottom_padding"
    android:paddingLeft="@dimen/card_default_left_or_right_padding"
    android:paddingRight="@dimen/card_default_left_or_right_padding"
    android:paddingTop="@dimen/card_default_top_or_bottom_padding">

    <TextView
        android:id="@+id/tv_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/network_error"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/default_text_size_big" />

    <TextView
        android:id="@+id/tv_reason_for_need_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_network_error"
        android:layout_below="@id/tv_network_error"
        android:text="@string/reason_for_need_network"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/default_text_size_small" />

    <ImageView
        android:layout_width="@dimen/content_detail_error_icon"
        android:layout_height="@dimen/content_detail_error_icon"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        android:layout_toStartOf="@id/tv_network_error"
        android:src="@drawable/ic_warning" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/fragment_default_main_icon_width_or_height"
        android:layout_height="@dimen/fragment_default_main_icon_width_or_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fragment_default_main_icon_top_margin"
        android:src="@drawable/ic_satellite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fragment_default_main_no_location_text_top_margin"
        android:text="@string/fragment_default_main_no_location_text"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/fragment_default_main_no_location_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fragment_default_main_add_city_text_top_margin"
        android:text="@string/fragment_default_main_add_city_text"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/fragment_default_main_add_city_text_size" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/t_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

</FrameLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/ContentDetailSuggestionBackground"
    android:elevation="2dp"
    android:paddingBottom="@dimen/card_default_top_or_bottom_padding"
    android:paddingLeft="@dimen/card_default_left_or_right_padding"
    android:paddingRight="@dimen/card_default_left_or_right_padding"
    android:paddingTop="@dimen/card_default_top_or_bottom_padding">

    <ImageView
        android:id="@+id/iv_suggestion_uv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_detail_suggestion_icon_left_margin"
        android:src="@drawable/ic_uv" />

    <TextView
        android:id="@+id/tv_suggestion_uv_brf_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_detail_suggestion_brf_prompt_left_margin"
        android:layout_toRightOf="@id/iv_suggestion_uv_icon"
        android:text="@string/content_detail_suggestion_uv_txt"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/default_text_size_big_big" />

    <TextView
        android:id="@+id/tv_suggestion_uv_brf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_suggestion_uv_brf_prompt"
        android:text="@string/content_detail_unknown"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/default_text_size_big_big" />

    <TextView
        android:id="@+id/tv_suggestion_uv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_suggestion_uv_icon"
        android:layout_below="@id/tv_suggestion_uv_brf"
        android:layout_marginRight="@dimen/content_detail_suggestion_txt_right_margin"
        android:layout_marginTop="@dimen/content_detail_suggestion_txt_top_margin"
        android:text="@string/content_detail_unknown"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/default_text_size_small" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorUnknownDark"
    android:paddingBottom="@dimen/card_default_top_or_bottom_padding"
    android:paddingLeft="@dimen/card_default_left_or_right_padding"
    android:paddingRight="@dimen/card_default_left_or_right_padding"
    android:paddingTop="@dimen/card_default_top_or_bottom_padding">

    <ImageView
        android:id="@+id/iv_daily_data_icon"
        android:layout_width="@dimen/content_detail_daily_data_icon_width_or_height"
        android:layout_height="@dimen/content_detail_daily_data_icon_width_or_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/content_detail_daily_left_or_right_margin"
        android:src="@drawable/ic_unknown" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_detail_daily_left_or_right_margin"
        android:layout_toRightOf="@id/iv_daily_data_icon">

        <TextView
            android:id="@+id/tv_daily_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_detail_unknown"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/content_detail_daily_data_text_size_big" />

        <TextView
            android:id="@+id/tv_daily_data_temperature_max_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/content_detail_daily_data_temperature_max_unit_right_margin"
            android:text="@string/content_detail_degree"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/content_detail_daily_data_text_size_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_daily_data_temperature_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_daily_data_temperature_max_unit"
            android:text="@string/content_detail_unknown"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/content_detail_daily_data_text_size_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_daily_data_temperature_min_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/content_detail_daily_data_temperature_min_unit_right_margin"
            android:layout_toLeftOf="@id/tv_daily_data_temperature_max_unit"
            android:text="@string/content_detail_degree"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/content_detail_daily_data_text_size_big" />

        <TextView
            android:id="@+id/tv_daily_data_temperature_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_daily_data_temperature_min_unit"
            android:text="@string/content_detail_unknown"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/content_detail_daily_data_text_size_big" />


        <TextView
            android:id="@+id/tv_daily_data_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_daily_data_time"
            android:layout_below="@id/tv_daily_data_time"
            android:layout_marginTop="5dp"
            android:text="@string/content_detail_unknown"
            android:textColor="@color/colorLight"
            android:textSize="@dimen/content_detail_daily_data_text_size_small" />
    </RelativeLayout>

</RelativeLayout>